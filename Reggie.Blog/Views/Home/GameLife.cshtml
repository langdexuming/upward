    <style>

        .interestList {
            padding: 0px 20px;
        }
        
        .div-thumbnail {
            margin-bottom: 20px;
            color: #eee;
            font-size: 20px;
        }
        
        .div-thumbnail .item-box {
            transition: all .15s cubic-bezier(.4, 0, .2, 1);
            transition-property: all;
            transition-duration: 0.15s;
            transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
            transition-delay: initial;
            cursor: pointer;
            overflow: hidden;
            /* border-radius: 6px; */
            box-shadow: 0 1px 12px rgba(0, 0, 0, .1);
        }
        
        .div-thumbnail img {
            height: 100%;
            transition: all .5s ease;
            width: 100%;
            fill-rule:nonzero;
            /* border-radius: 6px; */
        }
        
        .div-thumbnail img:hover {
            transform: scale(1.2);
        }
        
        .search-medium__link {
            display: block;
            position: relative;
            overflow: hidden;
        }
        
        .search-medium__link:before {
            content: "";
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            height: 40%;
            background: -webkit-gradient(linear, left top, left bottom, from(rgba(0, 0, 0, 0.7)), color-stop(50%, rgba(0, 0, 0, 0.6)), to(transparent));
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.6) 50%, transparent 100%);
            filter: progid: DXImageTransform.Microsoft.gradient(startColorstr='#b3000000', endColorstr='#00000000', GradientType=0);
        }
        
        .entrance-span {
            position: absolute;
            left: 10%;
            top: 5%;
            font-weight: normal;
            pointer-events: none;
            /* color: #b3b2b2; */
            font-weight: bold;
        }
        
        .poster .title {
            /* animation-duration: 3s;
            animation-delay: 2s; */
            animation-iteration-count: 1;

        }
        
        .row.social-group {
            text-align: center;
            display: block;
            margin-top: 20px;
        }
        
        .ibox-content {
            margin-top: 12px;
            /* margin-bottom: -60px; */
        }
        
        .ibox-content {
            color: inherit;
            padding: 15px 20px 20px 20px;
        }

        .interestList .title {
            padding: 12px 0px;
        }
    </style>
